@model FinalProject_A3850_DAL.Models.Dto.Req.ReqBrandDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MstBrand</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"><i class="fas fa-building"></i> Brand Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter brand name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label"><i class="fas fa-flag"></i> Country</label>
                <input asp-for="Country" class="form-control" placeholder="Enter country name" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Create</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}